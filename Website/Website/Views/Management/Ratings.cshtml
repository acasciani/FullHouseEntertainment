@model IEnumerable<SocialMediaScrapers.Facebook.Model.Rating>

@{
    ViewBag.Title = "Ratings";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2>Facebook Ratings</h2>
@if (Request["errorMsg"] != null)
{
    <p class="bg-danger" style="padding:15px;">
        <strong>Error:</strong> @Request["errorMsg"]
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reviewer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reviewer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RatingValue)
        </td>
        <td>
            @Html.ActionLink("Hide on Website", "BlockFBUser", new {  id=item.Reviewer.Id  })
        </td>
    </tr>
}

</table>
