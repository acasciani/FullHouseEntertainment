@using Website.Models
@using SocialMediaScrapers.Instagram.Model

@{
    ViewBag.Title = "Wedding Services";
    ViewBag.GalleryTitle = "Wedding Gallery";
    ViewBag.GalleryDescription = "Click on an image below to view photos from our clients' weddings.";

    Media coverImage = null;
    InstagramGallery coverImages = ViewBag.CoverImage as InstagramGallery;

    if (coverImages != null)
    {
        coverImage = coverImages.MediaItems.Where(i => i.MediaType == MediaType.Image).OrderByDescending(i => i.CreateDate).FirstOrDefault();
    }

    Layout = "~/Views/Shared/_InnerServicePage.cshtml";
}


@section WhatsIncluded{
    <div class="col-sm-12 text-center">
        <p>
            We're a full-service Wedding DJ Entertainment company. All our clients receive the following:
        </p>
    </div>
    <div class="col-sm-12 text-center">
        <ul class="colored">
            <li>Room Appropriate Sound System</li>
            <li>Lighting Tree with 4 Colored Lights</li>
            <li>Unlimited Consultations</li>
            <li>Professional MCs</li>
            <li>Disc Jockey</li>
            <li>Premier wedding entertainment specialists</li>
            <li>24-hour access to online planning forms</li>
            <li>Ability to manage evening far in advance of event</li>
        </ul>
    </div>
}


@section Prices{
    <p>
        Ready to plan your next big event? We're scheduling up for 2017 and want to help make your event a memorable one!
    </p>
<div class="row padding-bottom-15">
    <div class="col-sm-12 text-center">
        <form action="https://www.gigbuilder.com/cal/ny/fullhouseentertainment.nsf/checkdates" method="post" name="checkdate" class="form-inline" target="_blank">
            <input type="hidden" name="service" value="0" />
            <div class="form-group">
                <select name="Month" class="form-control">
                    <option value="0" disabled="disabled" selected="selected">Month</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>
            <div class="form-group">
                <select name="Day" class="form-control">
                    <option selected="selected" disabled="disabled">Day</option>
                    @for (int i = 1; i <= 31; i++)
                    {
                        <option>@i</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select name="Year" class="form-control">
                    <option selected="selected" disabled="disabled">Year</option>
                    @for (int i = 0; i < 4; i++)
                    {
                        <option>@DateTime.Today.AddYears(i).Year</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-default">Check Availability</button>
        </form>
    </div>
</div>
}


