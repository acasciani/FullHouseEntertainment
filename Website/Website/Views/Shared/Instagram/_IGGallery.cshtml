@model Website.Models.InstagramGallery

@foreach (var media in Model.MediaItems)
{
    if (Model.ShowOnlyFirstLink)
    {
        <a style="@(media == Model.MediaItems.First() ? "" : "display: none")" href="@media.Images.StandardResolution.Url" title="@(media.Caption != null && !string.IsNullOrWhiteSpace(media.Caption.Text) ? media.Caption.Text : "")" data-gallery="@Model.DataLightboxElement">
            <span>Recent Photos <i class="fa fa-picture-o" aria-hidden="true"></i></span>
        </a>
    }
    else
    {
        <a href="@media.Images.StandardResolution.Url" title="@(media.Caption != null && !string.IsNullOrWhiteSpace(media.Caption.Text) ? media.Caption.Text : "")" data-gallery="@Model.DataLightboxElement">
            <img src="@media.Images.Thumbnail.Url" alt="@(media.Caption != null && !string.IsNullOrWhiteSpace(media.Caption.Text) ? media.Caption.Text : "")" height="100" />
        </a>
    }
}